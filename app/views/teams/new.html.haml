%h2
  New Team

%div
  = form_for(:team, url: teams_path(@team), method: :post) do |f|
    - if @team.errors.any?
      %ul
        - @team.errors.full_messages.uniq.each do |msg|
          %li= msg

    %div
      = f.label :name
      = f.text_field :name   
    %div
      = f.label :description
      = f.text_area :description
    %div
      = f.submit 'Submit'
